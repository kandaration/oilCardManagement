{% extends 'base.html.twig' %}

{% block body %}
    <h1>Profil</h1>

    <table>
        <tbody>
            <tr>
                <th>Nom_profil</th>
                <td>{{ profil.nomProfil }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ profil.description }}</td>
            </tr>
            <tr>
                <th>Id_profil</th>
                <td>{{ profil.idProfil }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('profil_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('profil_edit', { 'id': profil.id_Profil }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
